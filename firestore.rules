rules_version = '2';
service cloud.firestore {
  // Apenas o SDK Admin (nosso backend) tem permissão total.
  // Usuários externos nunca podem ler/escrever direto.
  match /databases/{database}/documents {
    // Permite leitura e escrita **somente** quando a chamada vem do
    // serviço autenticado (admin SDK) – que usamos no código.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
